{
    "app-id" : "com.bladecoder.adventure-editor",
    "runtime" : "org.freedesktop.Platform",
    "runtime-version" : "1.6",
    "sdk" : "org.freedesktop.Sdk",
    "sdk-extensions" : [
        "org.freedesktop.Sdk.Extension.openjdk10"
    ],
    "command" : "adventure-editor",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=pulseaudio",
        "--device=dri",
        "--filesystem=home",
         "--env=PATH=/usr/bin:/app/bin:/app/jre/bin",
         "--env=JAVA_OPTS=-Djavax.net.ssl.trustStore=/app/jre/lib/security/adventure-cacerts",
         "--env=JAVA_HOME=/app/jre"
    ],
    "modules" : [
        {
            "name": "xorg-xrandr",
            "sources": [
                {
                    "type": "archive",
                    "sha256": "1059ff7a9ad0df8e00a765ffa4e08a505304c02663112da370ac7082030b980e",
                    "url": "http://xorg.freedesktop.org/releases/individual/app/xrandr-1.3.5.tar.bz2"
                },
                {
                     "type": "shell",
                     "commands": [ "autoreconf -fi" ]
                }
            ]
        },
        {
            "name": "libzip",
            "buildsystem": "cmake",
            "sources": [
                {
                    "type": "archive",
                    "sha256": "04ea35b6956c7b3453f1ed3f3fe40e3ddae1f43931089124579e8384e79ed372",
                    "url": "https://libzip.org/download/libzip-1.5.1.tar.xz"
                }
            ]
        },
        {
            "name": "openjdk",
            "buildsystem": "simple",
            "build-commands": [
              "/usr/lib/sdk/openjdk10/install.sh"
            ]
        },
        {
            "name": "adventure-editor",
            "buildsystem": "simple",
            "build-commands": [
                "install -D bin/adventure-editor /app/bin/adventure-editor",
                "install -D lib/*.jar /app/lib",
                "install -Dm644 desktop/com.bladecoder.adventure-editor.png /app/share/icons/hicolor/96x96/apps/com.bladecoder.adventure-editor.png",
                "install -Dm644 desktop/com.bladecoder.adventure-editor.svg /app/share/icons/hicolor/scalable/apps/com.bladecoder.adventure-editor.svg",
                "install -Dm644 desktop/com.bladecoder.adventure-editor.desktop /app/share/applications/com.bladecoder.adventure-editor.desktop",
                "install -Dm644 com.bladecoder.adventure-editor.appdata.xml /app/share/appdata/com.bladecoder.adventure-editor.appdata.xml",
                "install -Dm644 cacerts /app/jre/lib/security/adventure-cacerts"
            ],
            "sources" : [
                {
                    "type": "archive",
                    "sha256": "3d10cce0cc4543d5b6268a16a9455f2628e5b36d481a7663f6a3873a4d9b6224",
                    "url" : "https://github.com/bladecoder/bladecoder-adventure-engine/releases/download/v2.1.3/adventure-editor-2.1.3.zip"
                },
                {
                    "type": "file",
                    "path": "cacerts"
                },
                {
                    "type": "file",
                    "path": "com.bladecoder.adventure-editor.appdata.xml"
                }
            ]
        }
    ]
}
